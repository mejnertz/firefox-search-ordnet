{
  "manifest_version": 3,
  "name": "Ordnet.dk search",

  "author": "mejnertz",
  "description": "Add ordnet.dk search engine",
  "homepage_url": "https://github.com/mejnertz/firefox-search-ordnet",
  "short_name": "ordnet_search",
  "version": "0.1.0",

  "icons": {
    "16": "icons/on.svg",
    "48": "icons/on.svg",
    "64": "icons/on.svg",
    "96": "icons/on.svg",
    "256": "icons/on.svg"
  },

  "browser_specific_settings": {
    "gecko": {
        "id": "OrdnetSearchExtension@mejnertz",
        "strict_min_version": "55.0"
    }
  },

  "chrome_settings_overrides": {
    "search_provider": {
      "name": "Ordnet.dk",
      "search_url": "https://ordnet.dk/ddo/ordbog?query={searchTerms}",
      "keyword": "@ordnet"
    }
  }
}
